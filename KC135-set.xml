 <controls>
  <autoflight>
   <display-mach type="bool">false</display-mach>
  </autoflight>
 </controls>
 
 <nasal>
    <aar> 
        <file>Aircraft/KC135/aar.nas</file>
    </aar>
  </nasal>

</PropertyList>
